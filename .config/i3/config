# Set Wallpaper
#exec_always --no-startup-id feh --bg-scale /home/ffuszthaler/Downloads/daft-punk-minimalism-2-image.jpg
#exec_always --no-startup-id nitrogen --restore

# Polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh

# Compton
exec_always --no-startup-id "killall -q compton;compton --config ~/.config/compton/compton.conf"

# Dunst
exec_always --no-startup-id "killall -q dunst;dunst --config ~/.config/dunst/dunstrc"

# Set Color Theme
exec_always --no-startup-id wal -R

# start Composite manager
#exec_always --no-startup-id xcompmgr

# Disable Titlebar
for_window [class="^.*"] border pixel 1

# Needed for i3-gaps
gaps inner 10
gaps outer 10

# Important Applications
bindsym $mod+F2 exec --no-startup-id $BROWSER
bindsym $mod+F3 exec --no-startup-id $TERMINAL -e ranger

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Screen brightness controls
bindsym XF86MonBrightnessUp exec --nostartup-id xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 20 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioStop exec playerctl stop
